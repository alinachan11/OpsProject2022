
apiVersion: v1
kind: ConfigMap
metadata:
  name: "prometheus_datasource"
  labels:
    grafana_datasource: "true"
data:
  datasource.yaml: |-
    apiVersion: 1
    datasources:
      - name: Prometheus
        type: prometheus
        url: 'http://{{ PROM__LB }}'
        access: proxy
        isDefault: true